<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>de.pasuki.audiorouter</id>

  <name>AudioRouter</name>
  <summary>Virtual sinks and automatic audio routing for PipeWire</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <developer id="de.pasuki">
    <name>Pasuki</name>
  </developer>

  <content_rating type="oars-1.1" />

  <url type="homepage">https://github.com/PasukiTV/audiorouter</url>
  <url type="bugtracker">https://github.com/PasukiTV/audiorouter/issues</url>


  <description>
    <p>
      AudioRouter lets you create virtual sinks (“buses”), route them to any output device,
      and automatically assign applications to specific buses.
    </p>
    <p>Key features:</p>
    <ul>
      <li>Create and manage virtual sinks</li>
      <li>Route buses to output devices</li>
      <li>Automatically route applications to buses</li>
      <li>Designed for PipeWire-based desktops</li>
    </ul>
  </description>

  <screenshots>
    <screenshot type="default">
